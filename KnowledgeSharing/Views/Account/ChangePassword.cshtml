@model KnowledgeSharing.ViewModels.EditUserPasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

<div class="row">
    <div class="col-sm-12">
        <h1>Registration</h1>
        <form action="/account/changepassword" method="post" >
            @Html.AntiForgeryToken()

            <div class="form-row">
                <div class="form-group col-sm-12">
                    <label for="txtEmail">Email</label>
                    <span class="form-text">@Model.Email</span>
                    @Html.HiddenFor(temp => temp.Email)
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="txtPassword">Password</label>
                    <input type="password" class="form-control" id="Password" placeholder="Password" name="Password" required="required" onchange="validatePassword()" />
                    <span id="password">
                    </span>
                </div>

                <div class="form-group col-sm-6">
                    <label for="txtPassword">Confirm Password</label>
                    <input type="password" class="form-control" id="ConfirmPassword" placeholder="Confirm Password" name="ConfirmPassword" required="required" onchange="validateConfirmPassword()" />
                    <span id="confirmpassword">
                    </span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Update Password</button>
        </form>
    </div>
</div>

