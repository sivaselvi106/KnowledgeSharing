@model KnowledgeSharing.ViewModels.QuestionViewModel

<tr>
    <td>Votes<br /><span class="badge badge-secondary">@Model.VotesCount</span></td>
    <td>Answers<br /><span class="badge badge-secondary">@Model.AnswersCount</span></td>
    <td>Views<br /><span class="badge badge-secondary">@Model.ViewsCount</span></td>
    <td class="text-dark">
        <a href="/questions/view/@Model.QuestionID" class="text-primary">@Model.QuestionName</a> <br />
        <span class="badge badge-info">@Model.Category.CategoryName</span>
    </td>
    <td>
        @if (Convert.ToInt32(Session["CurrentUserID"]) != Model.UserID)
        {
            @:by @Model.User.Name
        }
        else
        {
            @:by you
        }
    </td>
    <td>
        on @Model.QuestionDateAndTime
    </td>
</tr>